/* pages/studyBuy/studyBuy.wxss */
page{
  background-color: #fff;
}
.top{
  height: 307rpx;
  border-bottom: 1px solid #D9D9D9;
  padding: 0 24rpx;
}
.top image{
  width:148rpx;
  height:204rpx;
  border-radius:5.5;
  float: left;
  margin: 38rpx 42rpx 0 0;
}
.top view.quickly{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  padding-top: 80rpx;
  height: 64rpx;
  line-height: 64rpx;
}
.top view{
  height:38rpx;
  font-size:48rpx;
  font-weight:bold;
  color:rgba(255,61,0,1);
}
.top view text{
  font-size:40rpx;
  font-weight:bold;
}
.select_date_active{
  width: 36rpx;
  height: 36rpx;
}
.agree{
  color:#72777C;
}
.footer{
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  line-height: 100rpx;
  border-top: 1px solid #D9D9D9;
}
.payBtn{
  width:264rpx;
  height:76rpx;
  background:rgba(0,0,0,1);
  border-radius:38rpx;
  color:rgba(245,193,90,1);
  line-height: 76rpx;
  text-align: center;
}

/* 遮罩层 */
.mask{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  background:#000;
  z-index:9000;
  opacity:0.5;
}
/* 弹出层 */
.dialogModel{
  width:90%;
  max-height: 90vh;
  position:fixed;
  top:5%;
  left:5%;
  z-index:9999;
  background-color:#fff;
  border-radius:20rpx;
}
.order_pay {
  position: fixed;
  bottom: 0;
  z-index: 9999;
}

.order_pay image {
  width: 48rpx;
  height: 48rpx;
}

.order_pay .common_submit_btn {
  width: 90%;
  border-radius: 48rpx;
}

.order_pay .op_close {
  position: absolute;
  right: 24rpx;
  top: 14.4rpx;
}

.op_title text {
  width: 48rpx;
  height: 48rpx;
  background: red;
  border-radius: 50%;
}

.op_price {
  border-bottom: 2px dashed #efefef;
}
.padding_custom {
  padding: 24rpx 36rpx;
}
