/* pages/vip/vip.wxss */
.v_banner{
  width: 100%;
  height: 30vh;
}
.btn_padding {
  padding: 2.4rpx 16.8rpx;
}

.bg_color1 {
  background: #f55b76;
}

.v_r_title text {
  height: 36rpx;
  width: 7.2rpx;
  background: #E7143A;
}

.v_r_item {
  background: #E7143A;
  width: 23%;
  padding: 7.2rpx 0px;
  border-radius: 24rpx;
}

.v_r_item.on {
  background: #fff;
  color: #E7143A;
  border-radius: 24rpx;
}

.v_info {
  height: 216rpx;
  margin-bottom: 84rpx;
}

.v_i_top image {
  width: 96rpx;
  height: 96rpx;
}

.v_i_qrcode {
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 12rpx;
}

.v_i_points {
  margin-bottom: -72rpx;
}

.v_i_points image {
  width: 60rpx;
  height: 60rpx;
}

.v_i_p_go {
  width: 132rpx;
  line-height: 60rpx;
  height: 60rpx;
  min-width: 132rpx;
  text-align: center;
  border-radius: 12rpx;
  color: #fff;
}

.v_b_l_num {
  width: 20%;
  background: #E7143A;
  font-size: 20rpx;
  color: white;
  padding: 4.8rpx 0;
  line-height: 1.3;
}

.v_b_list image {
  margin: 20rpx 0
}

.v_b_progress {
  width: 75%;
}

progress {
  width: 100%;
  -webkit-appearance: none;
  height: 48rpx;
}

::-webkit-progress-bar {
  background-color: #CCCCCC;
  border-radius: 24rpx;
}

::-webkit-progress-value {
  background-color: #F44444;
  border-radius: 24rpx;
}

.v_b_progress text {
  position: absolute;
  right: 12rpx;
  top: 9.6rpx;
  font-size: 20rpx;
}

.right_img {
  width: 100%;
  height: 40vw;
}