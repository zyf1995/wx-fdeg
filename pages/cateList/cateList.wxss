/* pages/cateList/cateList.wxss */
@import '../../iconfont.wxss';
page{
  background-color: #fff;
}
.header_wapper {
  height: 120rpx;
}

.h_header {
  height: 120rpx;
  position: fixed;
  z-index: 100;
  width: 100%;
  left: 0;
  top: 0;
  background: #F44444;
}

.h_header text.icon-left-arrow {
  width: 80rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 48rpx;
  color: #fff;
}

.h_search {
  height: 60rpx;
  background: #fff;
  /*width: 85%;*/
  margin: 0 19.2rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.gc_left {
  width: 30%;

}
.gc_right {
width: 70%;
padding: 24rpx 0;
}
.gc_left .gc_l_item {
  height: 96rpx;
  background: #F2F2F2;
  text-align: center;
  line-height: 96rpx;
}

.gc_l_item.on {
  background: #fff;
}

.gc_l_item.on text {
  width: 80%;
  height: 60rpx;
  line-height: 60rpx;
  background: #F44444;
  color: #fff;
  border-radius: 48rpx;
}
.hrg_title {
  height: 72rpx;
}

.hrg_title .line {
  width: 30%;
  height: 1px;
  background: #ccc;
}
.gc_r_item {
width: 33.33%;
min-width: 33.33%;
}
.gc_r_item image {
width: 96rpx;
  height: 96rpx;
  margin-bottom: 24rpx;
}
.gc_r_two {
padding: 24rpx 48rpx;
font-size: 28rpx;
}
